.text-center
  %p
    %h1
      = @topic.name
      \:
      = @section.name
  = link_to 'Back', topics_path
  %br
  %br

.container
  %table.table.table-hover.table-bordered
    %tr
      %th Lists
      %th Edit
      %th Destroy
    %tbody
      -@lists.each do |list|
        %tr
          %td
            = link_to list.name, list
          %td
            = link_to 'Edit', edit_list_path(list)
          %td
            = link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }
= render 'lists/form'
